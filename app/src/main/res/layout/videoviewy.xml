<androidx.cardview.widget.CardView xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cardview"
    android:layout_width="160dp"
    android:layout_height="wrap_content"
    android:layout_marginLeft="25dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:padding="0dp"
    android:layout_marginTop="10dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="0dp"

        android:padding="0dp">

        <ImageView
            android:id="@+id/videophoto"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:scaleType="fitXY"
            android:layout_alignParentTop="true"
            android:layout_marginRight="0dp"
            app:srcCompat="@color/black_overlay" />


        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="69dp"
            android:layout_marginEnd="5dp"
            android:background="@color/fui_bgGitHub"
            android:padding="2dp"
            android:text="TextView"
            android:textAppearance="@style/TextAppearance.AppCompat.Caption"
            android:textColor="@android:color/white"
            android:textSize="8dp"
            android:textStyle="bold"
            tools:text="1:03:31" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="97dp"
            android:layout_marginEnd="10dp"
            android:background="@color/fui_bgFacebook"
            android:padding="2dp"
            android:text="TextView"
            android:textColor="@color/common_google_signin_btn_text_dark_pressed"
            android:textSize="8dp"
            android:visibility="visible"
            tools:text="100 dollar" />

        <TextView
            android:id="@+id/person_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/videophoto"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="0dp"
            android:layout_marginBottom="-2dp"
            android:text="Congrats "
            android:textSize="23sp" />

        <TextView
            android:id="@+id/person_age"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/person_name"
            android:layout_marginLeft="5dp"
            android:text="Pewdiewpie"
            android:textSize="11dp" />

        <TextView
            android:id="@+id/views"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/person_age"
            android:layout_marginLeft="5dp"
            android:text="8.7 M viees * 11 months ago"
            android:textSize="11dp" />

    </RelativeLayout>

</androidx.cardview.widget.CardView>
